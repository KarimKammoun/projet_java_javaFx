<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryms.controller.DashboardController"
      style="-fx-background-color: #f8f9fa;" spacing="20">


    <HBox spacing="20" style="-fx-padding: 0 40;">
 

        <!-- Content -->
        <VBox VBox.vgrow="ALWAYS" spacing="20" style="-fx-padding: 20;">

            <!-- Stats -->
            <HBox spacing="15">
                <VBox styleClass="stat-card" prefWidth="180">
                    <Label text="Total Books" style="-fx-text-fill: #6c757d;"/>
                    <Label fx:id="totalBooks" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0d6efd;"/>
                </VBox>
                <VBox styleClass="stat-card" prefWidth="180">
                    <Label text="Total Copies" style="-fx-text-fill: #6c757d;"/>
                    <Label fx:id="totalCopies" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #198754;"/>
                </VBox>
                <VBox styleClass="stat-card" prefWidth="180">
                    <Label text="Available" style="-fx-text-fill: #6c757d;"/>
                    <Label fx:id="availableCopies" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #28a745;"/>
                </VBox>
                <VBox styleClass="stat-card" prefWidth="180">
                    <Label text="Total Members" style="-fx-text-fill: #6c757d;"/>
                    <Label fx:id="totalMembers" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #fd7e14;"/>
                </VBox>
                <VBox styleClass="stat-card" prefWidth="180">
                    <Label text="Active Borrowings" style="-fx-text-fill: #6c757d;"/>
                    <Label fx:id="activeBorrowings" text="0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #dc3545;"/>
                </VBox>
            </HBox>

            <!-- Recent Borrowings -->
            <VBox spacing="10">
                <Label text="Recent Borrowings" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <TableView fx:id="recentTable" prefHeight="200">
                    <columns>
                        <TableColumn text="Copy ID" prefWidth="100"/>
                        <TableColumn text="Member" prefWidth="150"/>
                        <TableColumn text="Borrow Date" prefWidth="120"/>
                        <TableColumn text="Due Date" prefWidth="120"/>
                        <TableColumn text="Status" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Trend Chart -->
            <VBox spacing="10">
                <Label text="Borrowing Trend (Last 6 Months)" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                <LineChart fx:id="trendChart" prefHeight="300">
                    <xAxis>
                        <CategoryAxis/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis/>
                    </yAxis>
                </LineChart>
            </VBox>
        </VBox>
    </HBox>
</VBox>