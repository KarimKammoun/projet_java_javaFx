<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryms.controller.MarkReceivedController" spacing="12" alignment="CENTER" style="-fx-padding:20; -fx-background-color: white;">

    <Label text="Mark Borrowing Received" style="-fx-font-size:14; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Copy ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="copyIdField" promptText="Enter copy id" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Or Borrowing ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="borrowingIdField" promptText="Optional borrowing id" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#cancel"/>
        <Button text="Mark Received" onAction="#markReceived" styleClass="btn-success"/>
    </HBox>

</VBox>
