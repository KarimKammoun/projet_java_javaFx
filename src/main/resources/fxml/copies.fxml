<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryms.controller.CopiesController"
      style="-fx-background-color: #f8f9fa;" spacing="20">

    <HBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-width: 0 0 1 0; -fx-border-color: #dee2e6;">
        <Label text="Copies Management" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="editCopyBtn" text="Edit Selected" styleClass="btn btn-secondary" onAction="#openEditCopy"/>
        <Button fx:id="addCopyBtn" text="Add Copy" styleClass="btn btn-primary" onAction="#openAddCopy"/>
    </HBox>

    <VBox spacing="10" style="-fx-padding: 0 40;">
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Search copies..." HBox.hgrow="ALWAYS"/>
        </HBox>
        <TableView fx:id="copiesTable" prefHeight="500">
            <columns>
                <TableColumn text="Copy ID" prefWidth="120"/>
                <TableColumn text="ISBN" prefWidth="150"/>
                <TableColumn text="Title" prefWidth="250"/>
                <TableColumn text="Status" prefWidth="100"/>
                <TableColumn text="Location" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>
</VBox>