<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.libraryms.controller.admin.MembersController"
      style="-fx-background-color: #f8f9fa;" spacing="20">

    <HBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-width: 0 0 1 0; -fx-border-color: #dee2e6;">
        <Label text="Members Management" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="deleteMemberBtn" text="Delete Member" styleClass="btn btn-danger" onAction="#deleteSelectedMember"/>
        <Button fx:id="addMemberBtn" text="Add Or Edit Member" styleClass="btn btn-primary" onAction="#openAddMember"/>
    </HBox>

    <VBox spacing="10" style="-fx-padding: 0 40;">
        <HBox spacing="10">
            <ChoiceBox fx:id="searchColumnChoice" prefWidth="160">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="All" />
                        <String fx:value="Phone" />
                        <String fx:value="CIN" />
                        <String fx:value="Name" />
                        <String fx:value="Email" />
                        <String fx:value="Type" />
                    </FXCollections>
                </items>
            </ChoiceBox>
            <TextField fx:id="searchField" promptText="Search members..." HBox.hgrow="ALWAYS"/>
        </HBox>
        <TableView fx:id="membersTable" prefHeight="500">
            <columns>
                <TableColumn text="Phone" prefWidth="140"/>
                <TableColumn text="CIN" prefWidth="120"/>
                <TableColumn text="Name" prefWidth="200"/>
                <TableColumn text="Email" prefWidth="200"/>
                <TableColumn text="Type" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
