<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.libraryms.controller.user.MemberDashboardController"
      style="-fx-background-color: #f8f9fa;" spacing="20">

    <!-- Header -->
    <HBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-width: 0 0 1 0; -fx-border-color: #e9ecef;">
        <HBox spacing="10">
            <Label text="LibraryMS" style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #0d6efd;"/>
            <Label text="Member Portal" style="-fx-text-fill: #6c757d;"/>
        </HBox>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button text="Browse Books" styleClass="btn btn-primary" onAction="#goToBrowse"/>
        <Button text="My Borrowings" styleClass="btn btn-primary" onAction="#goToBorrowings"/>
        <Label text="John Doe  Member" style="-fx-background-color: #cce7ff; -fx-padding: 4 8; -fx-background-radius: 12;"/>
    </HBox>

    <!-- Welcome -->
    <VBox style="-fx-background-color: #0d6efd; -fx-padding: 30; -fx-background-radius: 16; -fx-text-fill: white;">
        <Label fx:id="welcomeLabel" text="Welcome back" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Label text="Discover and borrow your next favorite book"/>
        <HBox spacing="20" style="-fx-padding: 20 0 0 0;">
            <VBox style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 15; -fx-background-radius: 12;">
                <Label text="Books Borrowed" style="-fx-text-fill: #e3f2fd;"/>
                <Label fx:id="booksBorrowedValue" text="0" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            </VBox>
            <VBox style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 15; -fx-background-radius: 12;">
                <Label text="Limit" style="-fx-text-fill: #e3f2fd;"/>
                <Label fx:id="limitValue" text="3" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            </VBox>
            <VBox style="-fx-background-color: rgba(255,255,255,0.2); -fx-padding: 15; -fx-background-radius: 12;">
                <Label text="Available" style="-fx-text-fill: #e3f2fd;"/>
                <Label fx:id="availableValue" text="0" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Search & Filters -->
    <VBox spacing="10" style="-fx-padding: 0 40;">
        <TextField promptText="Search by title or author..." style="-fx-pref-height: 50; -fx-background-radius: 12;"/>
        <!-- Category buttons removed (placeholders) -->
    </VBox>

    <!-- Books Grid -->
    <VBox style="-fx-padding: 0 40;">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Available Books" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <Label text="8 found" style="-fx-text-fill: #6c757d;"/>
        </HBox>
        <HBox spacing="20" style="-fx-padding: 20 0;">
            <!-- Repeat for 4 books -->
            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Clean Code" style="-fx-font-weight: bold;"/>
                <Label text="Robert C. Martin" style="-fx-text-fill: #6c757d;"/>
                <Label text="Available: 3/5" style="-fx-text-fill: #28a745;"/>
            </VBox>
            <!-- ... -->
        </HBox>
    </VBox>
</VBox>