<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.libraryms.controller.MembersController"
      style="-fx-background-color: #f8f9fa;" spacing="20">

    <HBox style="-fx-background-color: white; -fx-padding: 15; -fx-border-width: 0 0 1 0; -fx-border-color: #dee2e6;">
        <Label text="Members Management" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="addMemberBtn" text="Add Member" styleClass="btn-primary" onAction="#openAddMember"/>
    </HBox>

    <VBox spacing="10" style="-fx-padding: 0 40;">
        <HBox spacing="10">
            <TextField fx:id="searchField" promptText="Search members..." HBox.hgrow="ALWAYS"/>
        </HBox>
        <TableView fx:id="membersTable" prefHeight="500">
            <columns>
                <TableColumn text="Phone" prefWidth="150"/>
                <TableColumn text="Name" prefWidth="200"/>
                <TableColumn text="Email" prefWidth="200"/>
                <TableColumn text="Type" prefWidth="100"/>
                <TableColumn text="Actions" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
</VBox>